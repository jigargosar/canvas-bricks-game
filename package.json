{
  "name": "canvas-bricks-game",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -fr .cache dist",
    "start": "parcel src/index.html --open"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "typescript": "^3.4.4"
  },
  "dependencies": {
    "faker": "^4.1.0",
    "nanoid": "^2.0.1",
    "ramda": "^0.26.1",
    "react": "^16.0.0",
    "react-dom": "^16.8.6",
    "tachyons": "^4.11.1"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "printWidth": 75,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,html,elm,ts,tsx}": [
      "prettier --config package.json --write",
      "git add"
    ]
  }
}
